#        === Right prompt ===

function git_branch_name()
{
  branch=$(git symbolic-ref HEAD 2> /dev/null | awk 'BEGIN{FS="/"} {print $NF}')
  if [[ $branch == "" ]];
  then
    :
  else
    echo '%F{green}îœ¥%f '$branch''
  fi
}
setopt prompt_subst
RPROMPT='$(git_branch_name)'


